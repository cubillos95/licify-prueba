<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <script src="/js/control.js" type="module"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>form</title>
</head>

<body>

    <div class="container">
        <div class="container" style="text-align: center; margin-top: 1cm;">
            <button type="button" class="btn btn-success" onclick="window.location='/form'">Crear</button>
            <button type="button" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-success" onclick="window.location='/borrar'">Eliminar</button>
            <button id="buscar" type="button" class="btn btn-success" onclick="window.location='/leer'">Buscar</button>
            <button id="buscar" type="button" class="btn btn-danger" onclick="window.location='/logout'">Cerrar secion</button>
        </div>

        <form action="/subirForm" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Id</label>
                <input type="text" class="form-control" name="id" id="id" placeholder="Id factura">
            </div>


            <div class="form-group">
                <label for="exampleInputEmail1">Valor Total</label>
                <input type="text" class="form-control" name="valorTotal" id="valorTotal" placeholder="Valor Total">
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Iva Total</label>
                <input type="text" class="form-control" name="ivaTotal" id="ivaTotal" aria-describedby="emailHelp"
                    placeholder="Iva Total">
            </div>
            <br>
            <div id="comprasIndividuales"></div>
            <div class="form-group">
                <button type="button" class="btn btn-primary" id="comprasButton">Crear Producto</button>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Factura pagada</label>
                <input name="pagado" type="checkbox" aria-label="Checkbox for following text input">
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit" value="Submit">Subir</button>
            </div>
        </form>
    </div>

</body>



